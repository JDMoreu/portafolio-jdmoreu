---

interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
  tags: { name: string }[]
}

const { title, company, description, link, date, tags } = Astro.props
---

<div
  class="flex flex-row gap-12 w-full p-6 hover:border-white/5 hover:rounded-md hover:bg-white/5 hover:shadow-lg"
> 
  
  <div class="relative justify-between flex flex-col gap-2 pb-4 md:col-span-3">

    <div class="flex justify-between">
      <h3 class="font-semibold">
        {company}
      </h3>
      <span class="ml-2 pt-1 text-gray-400/80 text-xs font-ligh">
        {date}
      </span>
    </div>

    <div class="items-center">

      <span id="title" class="opacity-95">
        {title}
      </span>

    <p class="opacity-80 font-thin text-justify">
      {description}
    </p>

    </div>


    <ul class="flex flex-wrap mt-4 gap-2">
      {tags.map((tag) => (
        <li>
          <span class={`flex gap-x-2 rounded-full text-xs text-blue-500 font-semibold justify-center items-center bg-blue-400/10 py-1 px-2`}>
            {tag.name}
          </span>
        </li>
      ))}
    </ul>

  </div>
</div>