---

interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
  tags: { name: string }[]
}

const { title, company, description, link, date, tags } = Astro.props
---

<div
  class="flex flex-row  w-full p-8 transition-all duration-300
  hover:border-gray-800 hover:rounded-2xl hover:bg-gray-800 [&>div>div>p]:hover:text-gray-300 [&>div>div>h3]:hover:text-white hover:shadow-lg"
> 


  <div class="grid lg:grid-cols-3 gap-8">
    
      <div>
         <h4 class=text-gray-300">{company}</h4>
         <span class="text-gray-400 text-xs">{date}</span>
      </div>

      <div class="grid col-span-2">
        <h3 class="text-lg font-bold text-gray-300 pb-4">{title}</h3>
        
        <p class="text-gray-400">
          {description}
        </p>
          
          <ul class="flex flex-wrap mt-4 gap-2">
            {tags.map((tag) => (
              <li>
                <span class={`flex gap-x-2 rounded-full text-xs text-blue-500 font-semibold justify-center items-center bg-blue-400/10 py-1 px-2`}>
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>

      </div>

  </div>
</div>