---
import Github from "../icons/Github.astro"
import Linkedin from "../icons/Linkedin.astro"
import Mail from "../icons/Mail.astro"
import WhatsappIcon from "../icons/Whatsapp.astro"
---

<button type="button" data-modal-target="crypto-modal" data-modal-toggle="crypto-modal" class="bg-blue-700 text-gray-200 text-sm font-medium hover:bg-gray-200 hover:text-blue-700 py-2 px-4 rounded-2xl">
	Contactar
	</button>
	
	<!-- Main modal -->
	<div id="crypto-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
		<div class="relative p-4 w-full max-w-md max-h-full">
			<!-- Modal content -->
			<div class="relative bg-white rounded-lg shadow dark:bg-gray-800">
				<!-- Modal header -->
				<div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-700">
					<h3 class="text-lg font-semibold text-gray-900 dark:text-white">
						Contacto
					</h3>
					<button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="crypto-modal">
						<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
						</svg>
						<span class="sr-only">Close modal</span>
					</button>
				</div>
				<!-- Modal body -->
				<div class="p-4 md:p-5">
					<p class="text-sm font-normal text-gray-500 dark:text-gray-400"> Puedes contactarme por cualquiera de los siguientes medios:</p>
					<ul class="my-4 space-y-3">
						<li>
							<a href="https://wa.link/b9vku1" target="_blank" rel="noopener noreferrer" class="flex items-center p-3 text-base font-bold rounded-lg  group hover:shadow bg-gray-700 hover:bg-gray-600 text-gray-300">
								<WhatsappIcon class="size-6 text-green-300" fill="currentColor" />
								
								<span class="flex-1 ms-3 whitespace-nowrap">Whatsapp</span>
								<span class="inline-flex items-center justify-center px-2 py-0.5 ms-3 text-xs font-medium rounded bg-gray-500 text-white">Popular</span>
							</a>
						</li>
						<li>
							<a href="https://www.linkedin.com/in/jdmoreu/" target="_blank" rel="noopener noreferrer" class="flex items-center p-3 text-base font-bold rounded-lg  group hover:shadow bg-gray-700 hover:bg-gray-600 text-gray-300">
								<Linkedin class="size-6 text-blue-300" fill="currentColor" />

								<span class="flex-1 ms-3 whitespace-nowrap">Linkedin</span>
							</a>
						</li>
						<li>
							<a href="https://github.com/JDMoreu" target="_blank" rel="noopener noreferrer" class="flex items-center p-3 text-base font-bold rounded-lg  group hover:shadow bg-gray-700 hover:bg-gray-600 text-gray-300">
								<Github class="size-6" fill="#ffffff" />
								<span class="flex-1 ms-3 whitespace-nowrap">Github</span>
							</a>
						</li>
						<li>
							<a href="mailto:jdmoreudev@gmial.com" class="flex items-center p-3 text-base font-bold rounded-lg  group hover:shadow bg-gray-700 hover:bg-gray-600 text-gray-300">
								<Mail class="size-6 text-yellow-100" fill="currentColor" />
								<span class="flex-1 ms-3 whitespace-nowrap">Email</span>
							</a>
						</li>
					</ul>
					<div>
						<a href="#" class="inline-flex items-center gap-1 text-xs font-normal text-gray-500  dark:text-gray-400">
