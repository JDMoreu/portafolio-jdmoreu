---
import Layout from "../layouts/Layout.astro";
import Resume from "../components/Resume.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import Navbar from "../components/Navbar.astro";
import Briefcase from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";


---

<Layout
  title="Portafolio JDMoreu - Desarrollador y Especialista TI."
  description="Contrata a JDMoreu para tus proyectos de desarrollo de software y administración de sistemas. Ingeniero Electrónico y desarrollador de software. Especialista en arquitectura de soluciones de TI."
>
  <main class="lg:flex lg:justify-between lg:gap-4 lg:mx-[10%] lg:px-[10%] mx-[10%] ">

    <div class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col py-[5%] pl-[2%]">
      <SectionContainer class="mb-12">
        <Resume/>
      </SectionContainer>
      <SectionContainer>
        <Navbar/>
      </SectionContainer>
    </div>

    <div class="pt-24 lg:w-1/2 py-[5%] pl-[2%]">
      <SectionContainer id="sobre-mi" class="mb-24 pt-8">
        <AboutMe />
      </SectionContainer>
      <SectionContainer id="experiencia" class="py-12  ">
        <div class="flex items-center gap-4 mb-8 pb-8 pl-5">
          <Briefcase class="size-6" fill="#ffffff" />
          <h1 class="text-xl text-nowrap font-bold">Experiencia Laboral</h1>
        </div>
          <Experience />
      </SectionContainer>
   
      <SectionContainer id="proyectos" class="py-12 mb-24">
        <div class="flex items-center gap-4 mb-12 pb-12 pl-5">
          <CodeIcon class="size-6" fill="#ffffff" />
          <h1 class="text-xl text-nowrap font-bold">Proyectos</h1>
        </div>
       <Projects />
      </SectionContainer>


      <footer class="flex flex-col text-center opacity-70">
        <p class="text-xs">
          © 2024 JDMoreu. Todos los derechos reservados. Hecho con ❤️ desde Santa Marta, Colombia.
        </p>
      </footer>

    </div>

  </main>

</Layout>

