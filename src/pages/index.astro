---
import Layout from "../layouts/Layout.astro";
import Resume from "../components/Resume.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import TitelBar from "../components/TitelBar.astro";
import Navbar from "../components/Navbar.astro";
import Briefcase from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import UserIcon from "../icons/User.astro";


---

<Layout
  title="Portafolio JDMoreu - Desarrollador y Especialista TI."
  description="Contrata a JDMoreu para tus proyectos de desarrollo de software y administración de sistemas. Ingeniero Electrónico y desarrollador de software. Especialista en arquitectura de soluciones de TI."
>
  <main class="lg:flex lg:justify-between lg:gap-8 lg:mx-[10%] lg:px-[5%] mx-[4%] ">
    
    <div class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:flex-col">

      <div class="mt-20">

        <SectionContainer class="mb-12">
          <Resume/>
        </SectionContainer>
        
        <SectionContainer>
          <Navbar/>
        </SectionContainer>
      </div>
      
      
    </div>
    
    <div class="lg:w-10/12 pt-[5%] ">
      

      <SectionContainer id="experiencia" class="py-20  mb-40">
        <TitelBar>
            <Briefcase class="size-6" fill="#ffffff" />
            <h1 class="text-xl text-nowrap uppercase font-bold">Experiencia Laboral</h1>
        </TitelBar>
         <Experience />
      </SectionContainer>
   
      <SectionContainer id="proyectos" class="py-20 mb-40">
        <TitelBar>
          <CodeIcon class="size-6" fill="#ffffff" />
          <h1 class="text-xl text-nowrap uppercase font-bold">Proyectos</h1>
        </TitelBar>
        <Projects />
      </SectionContainer>

      <SectionContainer id="sobre-mi" class="py-20 mb-40 ">
        <TitelBar>
            <UserIcon class="size-6" fill="#ffffff" />
            <h1 class="text-xl text-nowrap uppercase font-bold">Sobre mi</h1>
        </TitelBar>
        <AboutMe />
      </SectionContainer>


      <footer class="flex flex-col text-center opacity-70 pb-10 mt-10">
        <p class="text-xs">
          © 2024 JDMoreu. Todos los derechos reservados. Hecho con ❤️ desde Santa Marta, Colombia.
        </p>
      </footer>

    </div>

  </main>

</Layout>

